<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/user_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkstate"
                android:focusable="false"
                android:layout_marginLeft="10dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:button="@null"
                android:layout_gravity="center"
                android:background="@drawable/checkbox_selector"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@mipmap/user_icon" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:text="别名:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#0d639b"
                            android:layout_width="wrap_content"
                            android:layout_height="0.3dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--imsi-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:text="IMSI:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/imsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#0d639b"
                            android:layout_width="wrap_content"
                            android:layout_height="0.3dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--imei-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_imei">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:text="IMEI:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/imei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#0d639b"
                            android:layout_width="wrap_content"
                            android:layout_height="0.3dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--tmsi-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_tmsi">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:text="TMSI:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tmsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"/>
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#0d639b"
                            android:layout_width="wrap_content"
                            android:layout_height="0.3dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--startRb,stopRb-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:id="@+id/layout_rb">
                    <!--startRb-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"
                            android:text="起始RB:"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/startRb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_size_13"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorItemText"/>
                            <View
                                android:layout_alignParentBottom="true"
                                android:background="#0d639b"
                                android:layout_width="wrap_content"
                                android:layout_height="0.3dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--stopRb-->
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_13"
                            android:textColor="@color/colorItemText"
                            android:text="结束RB:"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/stopRb"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_size_13"
                                android:textColor="@color/colorItemText"/>
                            <View
                                android:layout_alignParentBottom="true"
                                android:background="#0d639b"
                                android:layout_width="wrap_content"
                                android:layout_height="0.3dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/delete"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#e90742"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:textColor="@android:color/white"
        android:paddingRight="20dp"
        android:text="Delete"
        android:visibility="visible"/>

</LinearLayout>
