<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_corner_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/open_or_download_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Operate"
        android:gravity="center"
        android:textColor="#00b4ff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_18"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <TextView
        android:id="@+id/open_or_download_dialog_open"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Open"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#444444"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <TextView
        android:id="@+id/open_or_download_dialog_download"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Down load"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#444444"
        />

</LinearLayout>
