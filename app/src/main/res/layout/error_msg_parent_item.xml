<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#1AB8F3"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/error_msg_femto_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/femto_connect_icon"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/error_msg_femto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="MGNet-HFE6"
            android:textSize="@dimen/font_size_18"/>
        <TextView
            android:id="@+id/error_msg_femto_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="192.168.100.100"
            android:textSize="@dimen/font_size_12"/>
    </LinearLayout>
</LinearLayout>