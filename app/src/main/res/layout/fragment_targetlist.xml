<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#F2F2F2">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@mipmap/search_bg"
            >
            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/search_icon"
                android:gravity="center_vertical"
                android:hint="search"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="13dp"
                android:textSize="@dimen/font_size_16"
                android:textColor="#03304c"
                android:textColorHint="#AAAAAA"
                android:background="@null"
                />
        </LinearLayout>
        <Button
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_smalladd_normal"
            android:textSize="@dimen/font_size_20"
            android:textAllCaps="false"/>
        </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorItemLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <com.bravo.listview.UserDefineListView
        android:id="@+id/target_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:divider="#00000000"
        android:dividerHeight="0dp"></com.bravo.listview.UserDefineListView>
</LinearLayout>
