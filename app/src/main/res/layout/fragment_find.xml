<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:paddingTop="10dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_bg"
        android:orientation="vertical">

        <ListView
            android:id="@+id/findDeviceList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            android:divider="#000000"
            android:dividerHeight="0dp"
            android:clickable="false"
            android:transcriptMode="alwaysScroll"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"/>


        <LinearLayout
            android:id="@+id/FindImageViewLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/fragment_title_bg"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:text="" />

            <ImageView
                android:id="@+id/FindImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/ic_wifi_signal_4_dark" />

            <TextView
                android:id="@+id/residualTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="0.35"
                android:text="时间："
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
