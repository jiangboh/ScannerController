<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@drawable/left_menu_item_bg_selector"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/reveal_animation_item_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_basic_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/reveal_animation_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="62dp"
        android:textSize="@dimen/font_size_20"
        android:text="first"
        android:gravity="center_vertical"
        android:textColor="@color/reveal_anim_menu_item_text_color_selector"
        />
</LinearLayout>