<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_corner_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/two_btn_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Title"
        android:gravity="center"
        android:textColor="#00b4ff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_20"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <TextView
        android:id="@+id/two_btn_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="80dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="我是dialog提示信息"
        android:textSize="18sp"
        android:textColor="#444444"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/two_btn_dialog_left_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@drawable/dialog_left_btn_bg_selector"
            android:textAllCaps="false"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_18"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#cccccc"/>
        <Button
            android:id="@+id/two_btn_dialog_right_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OK"
            android:background="@drawable/dialog_right_btn_bg_selector"
            android:textAllCaps="false"
            android:textColor="#00b4ff"
            android:textSize="@dimen/font_size_18"/>
    </LinearLayout>
</LinearLayout>
