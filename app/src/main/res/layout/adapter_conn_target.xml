<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
    <!--android:focusable="true"
    android:focusableInTouchMode="true"-->
    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/user_item_bg"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:layout_marginLeft="12dp"
                android:id="@+id/user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:id="@+id/scanner_count"
                android:textColor="#e5e5e5"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <!--name-->
            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text="别名:"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/font_size_13"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorConnTargetLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--imsi-->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:text="IMSI:"
                android:textColor="@color/colorItemText"
                android:textSize="@dimen/font_size_13"
                android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imsi"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorConnTargetLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--imei-->
            <LinearLayout
                android:id="@+id/layout_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:text="IMEI:"
                android:textColor="@color/colorItemText"
                android:textSize="@dimen/font_size_13"
                android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/imei"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorItemLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"/>
                </LinearLayout>
        </LinearLayout>

            <!--tmsi-->
            <LinearLayout
                android:id="@+id/layout_tmsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text="TMSI:"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/font_size_13"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tmsi"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorItemLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"/>
                </LinearLayout>
            </LinearLayout>

            <!--connect time-->
            <LinearLayout
                android:id="@+id/layout_conntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="ConnTime:"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/font_size_13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/conntime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorConnTargetLine" />
                </LinearLayout>
            </LinearLayout>
            <!--attach time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_attachtime">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/font_size_13"
                    android:text="捕捉时间:"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/attachtime"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/font_size_13"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorConnTargetLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
