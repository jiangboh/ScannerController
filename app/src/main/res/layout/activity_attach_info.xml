<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarHeight"
        android:background="@mipmap/fragment_title_bg"
        android:gravity="bottom"
        >
        <include layout="@layout/normal_title_layout"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/attach_item_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/user_icon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--imsi-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMSI:"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/imsi"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorItemText"
                            android:textSize="@dimen/font_size_13"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_weight="1"
                            />
                        <View
                            android:background="@color/colorConnTargetLine"
                            android:layout_width="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--imei-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_imei">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMEI:"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/imei"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorItemText"
                            android:textSize="@dimen/font_size_13"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_weight="1"/>
                        <View
                            android:background="@color/colorConnTargetLine"
                            android:layout_width="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--connect time-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ConnTime:"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/conntime"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorItemText"
                            android:textSize="@dimen/font_size_13"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/colorConnTargetLine"
                            android:layout_width="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--attch time-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_attachtime">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AttachTime:"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/font_size_13"
                        android:textColor="@color/colorItemText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginLeft="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/attachtime"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorItemText"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:textSize="@dimen/font_size_13"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/colorConnTargetLine"
                            android:layout_width="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/unlock"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_12"
                android:text="Unlock"
                android:textAllCaps="false"
                android:focusable="false"
                android:background="@drawable/btn_attach_selector"/>
            <Button
                android:id="@+id/silent"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_12"
                android:text="Silent"
                android:textAllCaps="false"
                android:focusable="false"
                android:background="@drawable/btn_attach_selector"/>
            <Button
                android:id="@+id/sms"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_12"
                android:textAllCaps="false"
                android:focusable="false"
                android:text="SMS"
                android:background="@drawable/btn_attach_selector"/>
            <Button
                android:id="@+id/redirect"
                android:layout_width="65dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_12"
                android:text="Redir"
                android:textAllCaps="false"
                android:focusable="false"
                android:background="@drawable/btn_attach_selector"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/layout_attach">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@mipmap/blue_bar_bg">
            <TextView
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Lat: N/A"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14"/>
            <TextView
                android:id="@+id/longitude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Lng: N/A"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14"/>
            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14"/>

            <CheckBox
                android:id="@+id/openOrCloseVoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Voice"
                android:checked="false"
                android:gravity="center_vertical"
                android:layout_weight="0.6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
</LinearLayout>
