<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_corner_bg"
    android:orientation="vertical">
    <!--title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_heigh"
        android:textSize="@dimen/font_size_18"
        android:text="Add Target"
        android:textColor="@color/colordialogtitle"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_heigh"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/colordialogtext"
            android:textStyle="bold"
            android:text="Name:"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/colordialogtext"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--imsi-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_heigh"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/colordialogtext"
            android:textStyle="bold"
            android:text="IMSI:"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/imsi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:inputType="number"
            android:maxLength="15"
            android:hint="length less than 15"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/colordialogtext"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--imei-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_heigh"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colordialogtext"
        android:textStyle="bold"
        android:text="IMEI:"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/imei"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:inputType="number"
        android:maxLength="15"
        android:background="@android:color/transparent"
        android:hint="length less than 15"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colordialogtext"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--hint-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Redirect Config"
        android:textSize="@dimen/font_size_18"
        android:textColor="@color/colordialogtitle"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--tech-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_heigh"
        android:orientation="horizontal"
        android:id="@+id/imei_layout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/colordialogtext"
            android:textStyle="bold"
            android:text="Tech:"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/tech"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="@dimen/font_size_18"
            android:entries="@array/tech"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <!--band channel-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout_bc">
        <!--band-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_heigh"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold"
                android:text="Band:"
                android:gravity="center_vertical"
                android:textColor="@color/colordialogtext"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/band"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textSize="@dimen/font_size_18"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        <!--channel-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_heigh"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/colordialogtext"
                android:textStyle="bold"
                android:text="Channel:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/channel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:inputType="numberSigned"
                android:maxLength="5"
                android:background="@android:color/transparent"
                android:hint="length less than 5"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/colordialogtext"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
    </LinearLayout>

    <!--button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_heigh"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@drawable/dialog_left_btn_bg_selector"
            android:textAllCaps="false"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_18"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#cccccc"/>
        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OK"
            android:background="@drawable/dialog_right_btn_bg_selector"
            android:textAllCaps="false"
            android:textColor="#00b4ff"
            android:textSize="@dimen/font_size_18"/>
    </LinearLayout>
</LinearLayout>
